<?xml version="1.0"?>
<launch>

 <!-- joy node -->
  <node name="joy_kinova" pkg="joy" type="joy_node" respawn="true">
    <param name="dev" type="string" value="/dev/input/js0" />
    <param name="deadzone" value="0.12" />
    <param name="autorepeat_rate" value="10.0" type="double" />
  </node>

  <!-- Parameters -->
  <rosparam command="load" file="$(find kinova_pad)/launch/ps3.yaml" />
  <param name="kinova_joy" value="/joy"/>
  <node name="kinova_pad" pkg="kinova_pad" type="kinova_pad" output="screen">
       <param name="robot" type="string" value="mico"/>
  </node>
  
</launch>
